/**
 * @file Firebase Security Rules for Tambola Game.
 *
 * @description This ruleset allows public read access to Tambola game data
 * and restricts write access.  Since anonymous auth is allowed all writes are disallowed.
 *
 * @dataStructure
 * - /tambola_games/{gameId}: Stores Tambola game sessions.
 * - /tambola_games/{gameId}/called_numbers/{numberId}: Stores called numbers for each game.
 *
 * @keySecurityDecisions
 * - Public read access is granted to all game data.
 * - Write access is completely disabled given the anonymous auth.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read Tambola game sessions.
     * @path /tambolaGames/{gameId}
     * @allow (get) Any user can read a tambola game session.
     * @allow (list) Any user can list tambola game sessions.
     * @deny (create) No one can create a tambola game session.
     * @deny (update) No one can update a tambola game session.
     * @deny (delete) No one can delete a tambola game session.
     * @principle Allows public read access to game sessions, denies all writes.
     */
    match /tambolaGames/{gameId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read called numbers for a specific Tambola game.
     * @path /tambolaGames/{gameId}/calledNumbers/{numberId}
     * @allow (get) Any user can read a called number.
     * @allow (list) Any user can list called numbers for a game.
     * @deny (create) No one can create a called number.
     * @deny (update) No one can update a called number.
     * @deny (delete) No one can delete a called number.
     * @principle Allows public read access to called numbers, denies all writes.
     */
    match /tambolaGames/{gameId}/calledNumbers/{numberId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}